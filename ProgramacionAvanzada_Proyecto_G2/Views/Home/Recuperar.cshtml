@model ProgramacionAvanzada_Proyecto_G2.Entities.UsuarioEnt

@{
    ViewBag.Title = "Recuperar";
    Layout = "~/Views/Shared/_Layout - Login.cshtml";
}

@using (Html.BeginForm("RecuperarContrasenna", "Home", FormMethod.Post))
{
    <div class="row justify-content-center" style="width: 1200px; height: 700px;">
        <div class="col-md-6 mt-5">
            <div class="card">
                <div class="card-body">
                    <br />
                    <h1 class="card-title text-center">Recuperar contraseña</h1>
                    <br />
                    @if (ViewBag.MsjPantalla != null)
                    {
                        <div style="color:white" class="alert alert-primary" role="alert">
                            @ViewBag.MsjPantalla
                        </div>
                    }

                    <div class="card-body px-5 pb-5 pt-0">
                        <div class="row">
                            <div class="form-group col-md-12 mb-4">
                                @Html.TextBoxFor(m => m.correoElectronico, new { @type = "email", @class = "form-control input-lg", @placeholder = "Correo Electrónico" })
                            </div>
                            <div class="col-md-12" style="text-align:center">
                                <button type="submit" class="btn btn-primary btn-pill mb-4">Enviar</button>
                                <p>
                                    <a class="text-blue" href="@Url.Action("Index", "Home")">Ir al Inicio</a>
                                </p>
                            </div>
                        </div>
                    </div>>

                </div>
            </div>
        </div>
    </div>
}